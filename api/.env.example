# SQL Server (local) - örnek bağlantı
# Not: Parola/host bilgilerini kendi ortamına göre değiştir.

# SQL Auth örneği
DATABASE_URL="sqlserver://localhost:1433;database=SchoolDB;user=sa;password=YourStrongPassword!;trustServerCertificate=true"

# JWT
JWT_SECRET="change_me_to_a_long_random_secret"
JWT_REFRESH_SECRET="change_me_to_a_long_random_refresh_secret"

# App
PORT=5000
NODE_ENV=development
LOG_LEVEL=info

# CORS: virgülle ayrılmış origin listesi (örn: http://localhost:5173,http://127.0.0.1:5173)
CORS_ORIGINS=http://localhost:5173

# Refresh token hash pepper (production'da zorunlu önerilir)
REFRESH_TOKEN_PEPPER=super_secret_pepper_value
